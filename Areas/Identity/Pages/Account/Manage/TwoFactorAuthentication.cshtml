@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "التحقق بخطوتين";
    Layout = "_ManageLayout";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-shield-lock me-2"></i>التحقق بخطوتين
        </h5>
        <small class="opacity-75">تعزيز أمان حسابك بالتحقق بخطوتين</small>
    </div>
    
    <div class="card-body p-4">
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <div class="mb-4">
            <h6 class="fw-bold">
                <i class="bi bi-phone me-2"></i>تطبيق المصادقة
            </h6>
            <p class="text-muted">
                استخدم تطبيق المصادقة للحصول على رموز تحقق مؤقتة
            </p>
            
            @if (Model.Is2faEnabled)
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle me-2"></i>
                    التحقق بخطوتين مفعّل
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    التحقق بخطوتين غير مفعّل
                </div>
            }
        </div>
    </div>
</div>
