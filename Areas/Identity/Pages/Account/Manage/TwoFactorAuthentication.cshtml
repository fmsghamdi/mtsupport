@page
@model MabatSupportSystem.Areas.Identity.Pages.Account.Manage.TwoFactorAuthenticationModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> L
@{
    ViewData["Title"] = L["TwoFactorTitle"];
    Layout = "_ManageLayout";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-shield-lock me-2"></i>@L["TwoFactorTitle"]
        </h5>
        <small class="opacity-75">@L["TwoFactorDesc"]</small>
    </div>
    
    <div class="card-body p-4">
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <div class="mb-4">
            <h6 class="fw-bold">
                <i class="bi bi-phone me-1"></i>@L["AuthenticatorApp"]
            </h6>
            <p class="text-muted">@L["AuthenticatorAppDesc"]</p>
        </div>
        
        @if (Model.Is2faEnabled)
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle me-2"></i>@L["TwoFactorEnabled"]
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>@L["TwoFactorDisabled"]
            </div>
        }
    </div>
</div>
