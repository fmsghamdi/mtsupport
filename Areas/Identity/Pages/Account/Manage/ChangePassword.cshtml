@page
@model MabatSupportSystem.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> L
@{
    ViewData["Title"] = L["ChangePassword"];
    Layout = "_ManageLayout";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-key me-2"></i>@L["ChangePassword"]
        </h5>
        <small class="opacity-75">@L["ChangePasswordDesc"]</small>
    </div>
    
    <div class="card-body p-4">
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="mb-4">
                <label asp-for="Input.OldPassword" class="form-label fw-bold">
                    <i class="bi bi-lock me-1"></i>@L["CurrentPassword"]
                </label>
                <input asp-for="Input.OldPassword" class="form-control form-control-lg" type="password" />
                <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.NewPassword" class="form-label fw-bold">
                    <i class="bi bi-lock-fill me-1"></i>@L["NewPassword"]
                </label>
                <input asp-for="Input.NewPassword" class="form-control form-control-lg" type="password" />
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">
                    <i class="bi bi-check-circle me-1"></i>@L["ConfirmNewPassword"]
                </label>
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>
            
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-shield-check me-2"></i>@L["UpdatePassword"]
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
