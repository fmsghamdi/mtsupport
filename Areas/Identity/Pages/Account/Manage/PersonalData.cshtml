@page
@model MabatSupportSystem.Areas.Identity.Pages.Account.Manage.PersonalDataModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> L
@{
    ViewData["Title"] = L["PersonalDataTitle"];
    Layout = "_ManageLayout";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-database me-2"></i>@L["PersonalDataTitle"]
        </h5>
        <small class="opacity-75">@L["PersonalDataDesc"]</small>
    </div>
    
    <div class="card-body p-4">
        <p class="text-muted mb-4">@L["PersonalDataInfo"]</p>
        
        <div class="alert alert-warning mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>@L["DeleteWarning"]
        </div>
        
        <div class="d-flex gap-3">
            <a asp-page="./DownloadPersonalData" class="btn btn-success">
                <i class="bi bi-download me-2"></i>@L["Download"]
            </a>
            <a asp-page="./DeletePersonalData" class="btn btn-danger">
                <i class="bi bi-trash me-2"></i>@L["Delete"]
            </a>
        </div>
    </div>
</div>
