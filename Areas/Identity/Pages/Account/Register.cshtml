@page
@using Microsoft.Extensions.Localization
@using MabatSupportSystem
@inject IStringLocalizer<SharedResource> SharedLocalizer
@model MabatSupportSystem.Areas.Identity.Pages.Account.RegisterModel
@{ ViewData["Title"] = SharedLocalizer["Register"]; }

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white text-center py-3">
                <h3 class="mb-0"><i class="bi bi-person-plus-fill"></i> @SharedLocalizer["Create_Account_Title"]</h3>
            </div>
            <div class="card-body p-4">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.FullName" class="form-control" placeholder="..." />
                        <label>@SharedLocalizer["FullName"]</label>
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="..." />
                        <label>@SharedLocalizer["Email"]</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="..." />
    <label>@SharedLocalizer["Password"]</label>
    <span asp-validation-for="Input.Password" class="text-danger"></span>
</div>

<div class="form-floating mb-3">
    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="..." />
    <label>@SharedLocalizer["ConfirmPassword"]</label>
    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
</div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">
                        @SharedLocalizer["Register_Btn"]
                    </button>
                </form>
            </div>
            <div class="card-footer text-center bg-light">
                <small>
                    <a asp-page="./Login" class="text-decoration-none">@SharedLocalizer["AlreadyHaveAccount"]</a>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
