@page "{id:int}"
@model DetailsModel
@using MabatSupportSystem.Models
@using MabatSupportSystem
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["TicketDetails_Title"];
    var isOwner = Model.Ticket.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var isAdmin = User.IsInRole("Admin");
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-ticket-detailed text-primary"></i> 
            @SharedLocalizer["Ticket"] #@Model.Ticket.Id: @Model.Ticket.Title
        </h2>
        
        <span class="badge rounded-pill bg-@(Model.Ticket.Status == TicketStatus.Closed ? "secondary" : (Model.Ticket.Status == TicketStatus.Open ? "success" : "warning")) fs-6">
            @SharedLocalizer[$"Status_{Model.Ticket.Status}"]
        </span>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between text-muted small">
                        <span><i class="bi bi-person"></i> @Model.Ticket.UserName</span>
                        <span><i class="bi bi-calendar"></i> @Model.Ticket.CreatedDate.ToString("g")</span>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@SharedLocalizer["Detailed Description"]</h5>
                    <p class="card-text text-break">@Model.Ticket.Description</p>
                    
                    @if (!string.IsNullOrEmpty(Model.Ticket.BookingReferenceId))
                    {
                        <hr />
                        <p class="mb-0 text-muted small">
                            <strong>@SharedLocalizer["BookingReference"]:</strong> @Model.Ticket.BookingReferenceId
                        </p>
                    }
                </div>
            </div>

            <h4 class="mb-3">@SharedLocalizer["Discussion_Title"]</h4>
            
            @if (Model.Ticket.Responses != null && Model.Ticket.Responses.Any())
            {
                <div class="d-flex flex-column gap-3 mb-4">
                    @foreach (var response in Model.Ticket.Responses.OrderBy(r => r.CreatedDate))
                    {
                        var isStaff = response.IsStaffResponse;
                        <div class="card @(isStaff ? "border-primary bg-primary bg-opacity-10 align-self-start" : "bg-light align-self-end")" style="width: 85%;">
                            <div class="card-body py-2 px-3">
                                <div class="d-flex justify-content-between mb-1 small @(isStaff ? "text-primary fw-bold" : "text-muted")">
                                    <span>@(isStaff ? SharedLocalizer["SupportTeam"] : response.ResponderName)</span>
                                    <span>@response.CreatedDate.ToString("g")</span>
                                </div>
                                <p class="card-text mb-0">@response.Message</p>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">@SharedLocalizer["NoResponsesYet"]</div>
            }

            @if (Model.Ticket.Status != TicketStatus.Closed)
            {
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">@SharedLocalizer["AddReply_Label"]</label>
                                <textarea asp-for="NewResponse.Message" class="form-control" rows="3" placeholder="@SharedLocalizer["AddReply_Placeholder"]"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send-fill"></i> @SharedLocalizer["PostReply_Btn"]
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center">
                    <i class="bi bi-lock-fill"></i> @SharedLocalizer["TicketClosed_Message"]
                </div>
            }
        </div>

        <div class="col-md-4">
            @if (isAdmin)
            {
                <div class="card border-danger mb-4">
                    <div class="card-header bg-danger text-white">
                        <i class="bi bi-gear-fill"></i> @SharedLocalizer["AdminActions_Title"]
                    </div>
                <div class="card-body">
                        <form method="post" asp-page-handler="UpdateStatus">
                            <label class="form-label">@SharedLocalizer["ChangeStatus_Label"]</label>
                            <div class="input-group mb-3">
                                <select asp-for="NewStatus" class="form-select">
                                    <option value="Open">@SharedLocalizer["Status_Open"]</option>
                                    <option value="InProgress">@SharedLocalizer["Status_InProgress"]</option>
                                    <option value="Resolved">@SharedLocalizer["Status_Resolved"]</option>
                                    <option value="Closed">@SharedLocalizer["Status_Closed"]</option>
                                </select>
                                <button type="submit" class="btn btn-outline-danger">@SharedLocalizer["Update_Btn"]</button>
                            </div>
                        </form>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    @SharedLocalizer["TicketInfo_Title"]
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>@SharedLocalizer["Category"]:</span>
                        @{
                            string catName = Model.Ticket.Category?.Name ?? "";
                            string catKey = catName switch {
                                "Check-in Issue" => "Cat_CheckIn",
                                "General Inquiry" => "Cat_General",
                                "Payment Issue" => "Cat_Payment",
                                "Extension Request" => "Cat_Extension",
                                "Overnight Booking" => "Cat_Overnight",
                                "4-Hour Booking" => "Cat_Hourly4",
                                "6-Hour Booking" => "Cat_Hourly6",
                                "Cancellation" => "Cat_Cancel",
                                _ => ""
                            };
                            string catDisplay = string.IsNullOrEmpty(catKey) ? catName : SharedLocalizer[catKey];
                        }
                        <strong>@catDisplay</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>@SharedLocalizer["Priority"]:</span>
                        @{
                            string prioKey = Model.Ticket.Priority.ToString() switch {
                                "Low" => "Priority_Low",
                                "Medium" => "Priority_Medium",
                                "High" => "Priority_High",
                                _ => ""
                            };
                            string prioDisplay = string.IsNullOrEmpty(prioKey) ? Model.Ticket.Priority.ToString() : SharedLocalizer[prioKey];
                        }
                        <span class="badge bg-secondary">@prioDisplay</span>
                    </li>
                </ul>
            </div>
            
            <div class="mt-3">
                <a asp-page="./Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-left"></i> @SharedLocalizer["BackToList_Btn"]
                </a>
            </div>
        </div>
    </div>
</div>
