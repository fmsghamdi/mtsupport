@page
@model MabatSupportSystem.Pages.Tickets.IndexModel
@using MabatSupportSystem
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Index_Title"];
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-primary mb-1">
                @SharedLocalizer["Index_Title"] <i class="bi bi-inbox-fill"></i>
            </h1>
            <p class="text-muted mb-0">@SharedLocalizer["Index_Subtitle"]</p>
        </div>
        <a asp-page="Create" class="btn btn-primary shadow-sm px-4 rounded-pill">
            <i class="bi bi-plus-lg me-2"></i>@SharedLocalizer["Btn_CreateNew"]
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4 bg-light rounded-3">
            <h6 class="fw-bold text-muted mb-3"><i class="bi bi-funnel-fill me-2"></i>@SharedLocalizer["Filter_Title"]</h6>
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control border-start-0" placeholder="@SharedLocalizer["Search"]...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="Priority" class="form-select">
                        <option value="">@SharedLocalizer["Option_AllPriorities"]</option>
                        <option value="Low">@SharedLocalizer["Priority_Low"]</option>
                        <option value="Medium">@SharedLocalizer["Priority_Medium"]</option>
                        <option value="High">@SharedLocalizer["Priority_High"]</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="Status" class="form-select">
                        <option value="">@SharedLocalizer["Option_AllStatuses"]</option>
                        <option value="Open">@SharedLocalizer["Status_Open"]</option>
                        <option value="InProgress">@SharedLocalizer["Status_InProgress"]</option>
                        <option value="Resolved">@SharedLocalizer["Status_Resolved"]</option>
                        <option value="Closed">@SharedLocalizer["Status_Closed"]</option>
                    </select>
                </div>
                <div class="col-md-1 d-grid">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i></button>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Tickets.Any())
    {
        <div class="text-center py-5 bg-white rounded-3 shadow-sm border border-light">
            <div class="mb-3 text-muted" style="opacity: 0.2">
                <i class="bi bi-inbox" style="font-size: 5rem;"></i>
            </div>
            <h3 class="fw-bold text-muted">@SharedLocalizer["Empty_Title"]</h3>
            <p class="text-muted mb-4">@SharedLocalizer["Empty_Text"]</p>
            <a asp-page="Create" class="btn btn-outline-primary px-4 rounded-pill">
                @SharedLocalizer["Btn_CreateFirst"] <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-4 py-3">@SharedLocalizer["TABLE_ID"]</th>
                            <th class="py-3">@SharedLocalizer["TABLE_SUBJECT"]</th>
                            <th class="py-3">@SharedLocalizer["TABLE_CATEGORY"]</th>
                            <th class="py-3">@SharedLocalizer["TABLE_DATE"]</th>
                            <th class="py-3">@SharedLocalizer["LABEL_STATUS"]</th>
                            <th class="text-end pe-4 py-3">@SharedLocalizer["TABLE_ACTION"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Tickets)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">#@item.Id</td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Title</div>
                                    @if (!string.IsNullOrEmpty(item.BookingReferenceId))
                                    {
                                        <small class="text-muted"><i class="bi bi-bookmark me-1"></i>@item.BookingReferenceId</small>
                                    }
                                </td>
                                
                                <td>
                                    @{
                                        string catNameEn = item.Category?.Name ?? "";
                                        string catKey = "";

                                        if (catNameEn.Contains("Check-in")) catKey = "Cat_CheckIn";
                                        else if (catNameEn.Contains("Extension")) catKey = "Cat_Extension";
                                        else if (catNameEn.Contains("Overnight")) catKey = "Cat_Overnight";
                                        else if (catNameEn.Contains("Hourly") && catNameEn.Contains("4h")) catKey = "Cat_Hourly4";
                                        else if (catNameEn.Contains("Hourly") && catNameEn.Contains("6h")) catKey = "Cat_Hourly6";
                                        else if (catNameEn.Contains("Payment")) catKey = "Cat_Payment";
                                        else if (catNameEn.Contains("Cancellation")) catKey = "Cat_Cancel";
                                        else if (catNameEn.Contains("General")) catKey = "Cat_General";
                                        
                                        string finalName = string.IsNullOrEmpty(catKey) ? catNameEn : SharedLocalizer[catKey];
                                    }
                                    <span class="badge bg-light text-dark border">@finalName</span>
                                </td>

                                <td class="text-muted small">@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @{
                                        var statusClass = item.Status.ToString() switch
                                        {
                                            "Open" => "success",
                                            "Closed" => "secondary",
                                            "InProgress" => "warning",
                                            "Resolved" => "info",
                                            _ => "secondary"
                                        };
                                        var statusText = item.Status.ToString() switch
                                        {
                                            "Open" => SharedLocalizer["Status_Open"],
                                            "Closed" => SharedLocalizer["Status_Closed"],
                                            "InProgress" => SharedLocalizer["Status_InProgress"],
                                            "Resolved" => SharedLocalizer["Status_Resolved"],
                                            _ => item.Status.ToString()
                                        };
                                    }
                                    <span class="badge bg-@statusClass bg-opacity-10 text-@statusClass px-3 py-2 rounded-pill">
                                        @statusText
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary">
                                        @SharedLocalizer["Btn_View"] <i class="bi bi-chevron-right ms-1"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
